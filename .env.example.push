# ==============================================================================
# Push Notifications Configuration
# ==============================================================================
# Copy this section to your .env file and configure values

# ------------------------------------------------------------------------------
# Firebase Cloud Messaging (FCM) - Android Push Notifications
# ------------------------------------------------------------------------------
# Get your server key from: https://console.firebase.google.com/
# Project Settings > Cloud Messaging > Server Key
FCM_SERVER_KEY=AAAAbbbbCCCCddddEEEEffffGGGGhhhhIIIijjjkkklll

# ------------------------------------------------------------------------------
# Apple Push Notification Service (APNs) - iOS Push Notifications
# ------------------------------------------------------------------------------
# Option 1: Token-based authentication (RECOMMENDED by Apple)
# Get these from: https://developer.apple.com/account/resources/authkeys/list
APNS_AUTH_KEY_PATH=/path/to/your/AuthKey_ABC123.p8
APNS_KEY_ID=ABC123
APNS_TEAM_ID=DEF456
APNS_BUNDLE_ID=com.yourcompany.yourapp

# Option 2: Certificate-based authentication (Legacy)
# Export your certificate from Keychain as .p12, then convert to .pem:
# openssl pkcs12 -in Certificate.p12 -out apns_cert.pem -nodes
APNS_CERT_PATH=/path/to/apns_cert.pem

# ------------------------------------------------------------------------------
# APNs Environment
# ------------------------------------------------------------------------------
# Set to 'true' for development/testing, 'false' for production
# Development uses: https://api.development.push.apple.com
# Production uses: https://api.push.apple.com
APNS_USE_SANDBOX=true

# ------------------------------------------------------------------------------
# Notification Queue Processing
# ------------------------------------------------------------------------------
# Background worker settings (used by push_notification_worker.py)
PUSH_WORKER_BATCH_SIZE=100
PUSH_WORKER_INTERVAL_SECONDS=30
